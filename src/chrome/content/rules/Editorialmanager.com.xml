<!--
	This ruleset currently prevents the download of some pdf.

	Test http://www.editorialmanager.com/homepage/DOCS/Reviewer_Tutorial.pdf
	with and without HTTPS-Everywhere enabled.

-->
<ruleset name="Editorialmanager.com" platform="mixedcontent" default_off="other">

	<target host="editorialmanager.com" />
	<target host="www.editorialmanager.com" />
		<test url="http://www.editorialmanager.com/ovs/default.aspx" />
		<test url="http://www.editorialmanager.com/homepage/DOCS/Reviewer_Tutorial.pdf" />

	<securecookie host="\.editorialmanager\.com" name=".+" />

	<rule from="^http://(?:www\.)?editorialmanager\.com/"
		to="https://www.editorialmanager.com/" />

</ruleset>
